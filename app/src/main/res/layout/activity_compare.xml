<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Compare">

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/compdev1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:hint="Enter Device 1" />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/compdev2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:hint="Enter Device 2" />

    <Button
        android:id="@+id/compbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Compare"
        android:onClick="comparedev"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/compdevimg"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="50dp" />

                        <TextView
                            android:id="@+id/compdevname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="DeviceName"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compsoftwareversion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Software"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compoperatingsystem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="OS"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compprocessor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Processor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compCPU"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="CPU"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compGPU"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="GPU"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compdisplay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Display"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compstorage_ram"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Storage/RAM"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compmaincamera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="main Camera"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compfrontcamera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Front Camera"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compvideorecording"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Video Recording"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compsensors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Sensors"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compbattery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Battery"
                            android:textSize="20dp" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/compcompdevimg1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="50dp" />

                        <TextView
                            android:id="@+id/compdevname1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="DeviceName"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compsoftwareversion1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Software"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compoperatingsystem1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="OS"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compprocessor1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Processor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compCPU1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="CPU"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compGPU1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="GPU"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compdisplay1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Display"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compstorage_ram1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Storage/RAM"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compmaincamera1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="main Camera"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compfrontcamera1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Front Camera"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compvideorecording1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Video Recording"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compsensors1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Sensors"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/compbattery1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:text="Battery"
                            android:textSize="20dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>